FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    top
    {
        type            fixedValue;
        value           uniform (0 -0.1 0);        
    }

    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    sides
    {
        type            fluxCorrectedVelocity;
        value           uniform (0 0 0);
    }

    frontAndBack
    {
        type            symmetryPlane;
    }
}


